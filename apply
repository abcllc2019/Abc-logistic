  <!-- EmailJS -->
  <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
  <script>
    (function(){ emailjs.init("vhgTnq8riUK29JBK6"); })();
  </script>
  <script src="script.js"></script>
  <script>
    // Send application via EmailJS (to your inbox)
    const applyForm = document.getElementById('applyForm');
    const msg = document.getElementById('applyMsg');

    applyForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      msg.textContent = "Sending…";

      const data = {
        full_name: applyForm.full_name.value,
        email: applyForm.email.value,
        phone: applyForm.phone.value,
        license: applyForm.license.value,
        emergency_phone: applyForm.emergency_phone.value,
        reg_link: applyForm.reg_link.value || "N/A",
        ins_link: applyForm.ins_link.value || "N/A"
      };

      try {
        // template for application submission
        await emailjs.send("service_2bhwn1u", "template_jqo8csc", data);
        window.location.href = "apply-success.html";
      } catch (err) {
        console.error(err);
        msg.textContent = "Sorry, something went wrong. Please try again.";
      }
    });
  </script>
