<!-- EmailJS -->
<script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
<script>
  (function(){ emailjs.init("vhgTnq8riUK29JBK6"); })();
</script>
<script src="script.js"></script>
<script>
  const contactForm = document.getElementById('contactForm');
  const cmsg = document.getElementById('contactMsg');
  contactForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    cmsg.textContent = "Sending…";
    try {
      await emailjs.send("service_2bhwn1u", "template_3ffr751", {
        from_name: contactForm.from_name.value,
        reply_to: contactForm.reply_to.value,
        message: contactForm.message.value
      });
      cmsg.textContent = "Thanks! We’ll reply shortly.";
      contactForm.reset();
    } catch (err) {
      console.error(err);
      cmsg.textContent = "Sorry, couldn’t send. Please try again.";
    }
  });
</script>
